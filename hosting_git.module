/**
 * Returns TRUE if this node type is either allowed to deploy from git or is allowed to have hooks.
 *
 * Returns FALSE for any type other than 'site' or 'platform'.
 *
 * @param $type
 *
 * @return bool
 */
function _hosting_git_type_allowed($type) {
  return
    ($type == 'site' || $type == 'platform') &&
    (variable_get("hosting_git_allow_deploy_" . $type, TRUE) || variable_get("hosting_git_allow_hooks_" . $type, TRUE));
}