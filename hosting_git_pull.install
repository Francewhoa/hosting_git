/**
 * Add last_pull_ip column to our hosting_hosting_git_pull_projects table.
 */
function hosting_git_pull_update_6001(){
  $ret = array();
  db_add_field($ret, 'hosting_hosting_git_pull_projects', 'last_pull_ip', array('type' => 'varchar', 'not null' => TRUE, 'default' => '', 'length' => 15));
  return $ret;
}

/**
 * Add last_pull_ip column to our hosting_hosting_git_pull_platforms table.
 *
 * This was broken in hosting_git_pull_update_6000() and mistakenly removed completely instead of fixed.
 */
function hosting_git_pull_update_6201() {
  $ret = array();
  if (!db_column_exists('hosting_hosting_git_pull_platforms', 'last_pull_ip')) {
    db_add_field($ret, 'hosting_hosting_git_pull_platforms', 'last_pull_ip', array('type' => 'varchar', 'not null' => TRUE, 'default' => '', 'length' => 15));
  }
  return $ret;
}
